<h1>Ejercicios contables</h1>

<table>
  <tr>
  <td class="boton" width="200" align="center">
  <%= image_tag "add.png" %>
  <span style="vertical-align: top"> 
  <%= link_to "Abrir ejercicio" , new_ejercicio_path %>
  </span>
  </tr>
</table>
<div class="tablaContainer">
  <table>
  <tr class="headerStyle">
    <th>Desde</th>
    <th>Hasta</th>
    <th>Descripci&oacute;n</th>
    <th>Estado</th>
  </tr>

<% @ejercicios.each do |ejercicio| %>
  <tr class="<%= cycle('rowStyle' , 'rowStyle1' ) %>">
    <td><%=h ejercicio.ejer_desde %></td>
    <td><%=h ejercicio.ejer_hasta %></td>
    <td><%=h ejercicio.ejer_descripcion %></td>
    <td><%=h ejercicio.ejer_cerrado %></td>
    <td><%= link_to 'Mostrar', ejercicio %></td>
    <td><%= link_to 'Editar', edit_ejercicio_path(ejercicio) %></td>
  </tr>
</div>
<% end %>
</table>

<br />

