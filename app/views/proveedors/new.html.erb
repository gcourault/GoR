<h1 align="left">Nuevo proveedor</h1>

<br />
<% form_for(@proveedor) do |f| %>
  <%= f.error_messages %>
<table align="left">
<tr>
<td>
<table align="left">
 <tr>
  <td>
<Fieldset class="form"  width="200" >
<LEGEND align="left" class="formlegend">Ingresar datos</LEGEND>
<table>
    <tr>
     <td align="left">
      Nombre:
     </td>
     <td align="left">
       <%= f.text_field :prov_nombre, :class => "textosbox"  %>
     </td>
</tr>
<tr>
     <td align="left">
      Calle:
     </td>
     <td align="left">
       <%= f.text_field :prov_calle, :size => 20, :class => "textosbox" %>
     </td>
</tr>
<tr>
     <td align="left">
      Puerta:
     </td>
     <td align="left">
       <%= f.text_field :prov_puerta, :size => 10, :class => "textosbox"  %>
     </td>
    </tr>
    <tr>
     <td align="left">
      Localidad:
     </td>
     <td align="left">
       <%= text_field_with_auto_complete :localidad, :loca_nombre, :size => 40, :class => "textosbox" %> 
     </td>
</tr>
<tr>
     <td align="left">
       Tel&eacute;fono:
     </td>
     <td align="left">
       <%= f.text_field :prov_telefono, :size => 20, :class => "textosbox"  %>
     </td>
</tr>
<tr>
     <td align="left">
      Consignatario:
     </td>
     <td align="left">
        <%= f.select(:prov_consignatario , options_for_select([['Si', 'Si'],['No', 'No']],  @proveedor.prov_consignatario.to_s ),  {}, :class => "textosbox" ) %>   
     </td>
    </tr>
    <tr>
      <td align="left">
      CUIT:
      </td>
      <td align="left">
       <%= f.text_field :prov_cuit, :size => 15, :class => "textosbox"  %>
      </td>
</tr>
<tr>
      <td align="left">
       Tipo documento:
      </td>
      <td align="left">
       <%= @tipodocumentos = Tipodocumento.find(:all, :order =>"tdoc_nombre")
       f.collection_select :tipodocumento_id, @tipodocumentos, :id, :tdoc_nombre, {}, :class => "textosbox"  %>
      </td>
</tr>
<tr>
      <td align="left">
       Situaci&oacute;n afip:
      </td>
      <td align="left">
       <%= @situacionafips = Situacionafip.find(:all, :order =>"situ_nombre")
        f.collection_select :situacionafip_id, @situacionafips, :id, :situ_nombre, {}, :class => "textosbox"  %>
      </td>
    </tr>
     <td align="left">
       Excento Retgan: 
     </td>
     <td align="left">
      <%= f.select(:prov_exentoretgan , options_for_select([['No', 'No'],['Si', 'Si']],  @proveedor.prov_exentoretgan.to_s ),  {}, :class => "textosbox" ) %>
     </td>
</tr>
<tr>
     <td align="left">
       Ingresos brutos:
     </td>
     <td align="left">
       <%= f.text_field :prov_ingbrutos, :size => 20, :class => "textosbox"  %>
     </td>
</tr>
<tr>
     <td align="left">
       R&eacute;gimen retenci&oacute;n:
     </td>
     <td align="left">
      <%= f.text_field :prov_regimenretencion, :size => 15, :class => "textosbox"  %>
     </td>
    </tr>
    <tr>
     </td>
     <td align="left"> 
       Estado:
     </td>
     <td align="left">
        <%= f.select(:prov_estado , options_for_select([['Habilitado', 'Habilitado'],['No Habilitado', 'No Habilitado']],  @proveedor.prov_estado.to_s ),  {}, :class => "textosbox" ) %>  
     </td>
</tr>
<tr>
     <td align="left">
       Observaciones:
     </td>
     <td align="left">
       <%= f.text_field :prov_observaciones, :size => 20 , :class => "textosbox"  %>
     </td>
</tr>
<tr>
     <td align="left">
       Saldo:
     </td>
     <td align="left">
      <%= f.text_field :prov_saldo, :size => 10, :class => "textosbox"  %>
     </td>
   </tr>
   <tr>
    <td align="left">
      Fecha baja: 
    </td>
    <td colspan="2" align="left" >
       <%= f.date_select(:prov_baja,  {:include_blank => true, :default => nil}, {:class => "textosbox"}) %>
    </td>
   </tr>

</table>
</Fieldset>
</td>
</tr>
</table>
</td>
</tr>
<tr>
<td>
 <table align="left">
  <tr height="80" >
   <td align="left" width="300">
      <%= image_tag "cancel.png" %> 
      <span style="vertical-align: top">  
        <%= link_to 'Cancelar',  :controller => 'proveedors', :action => 'index', :page => params[:page] %>
      </span>
   </td>
   <td width="300" align="left">
   <!-- <input type="image" src="/images/form_add.png" name="SubmitType" value="new"> -->
     <%= f.submit 'Guardar',  :confirm => 'Quiere guardar el nuevo proveedor?', :class => "textosbox" %>
   </td>
  </tr>
 </table>
</td>
</tr>
</table>
<% end %>



