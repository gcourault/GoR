         <% saldocont1 = (saldocont1 - saldocaucion.importecauc.to_d) %> <% totalacreditado = (saldocaucion.importecauc.to_d) %>
     <% end %>
   <% end %>
      <% if @reingresos.empty? %>
      <% else %>
              <% @reingresos.each do |reingreso| %>
