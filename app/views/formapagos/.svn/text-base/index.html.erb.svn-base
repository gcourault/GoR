<h1>Listado de formas de pagos</h1>
<% form_tag formapagos_path, :method => 'get' do %>  
 <Fieldset class="filtro">
      Buscar forma de pago:
      <%= text_field_tag :nombre, params[:nombre], :class => "textosbox", :size => 30 %>
     
      <%= submit_tag "Buscar", :class => "textosbox" %>
</Fieldset>
<% end %> 
<br />
<table>
<tr>
<td class="boton"  align="center">
  <%= image_tag "add.png" %>
 <span style="vertical-align: top"> 
 <%= link_to 'Crear nueva forma de pago', new_formapago_path %>
 </span>
</td>
</tr>
</table>


<div class="tablaContainer">
 <table class="tabladentrocont">
  <tr class="headerStyle">
    <th>Codigo</th>
    <th>Nombre</th>
    <th colspan="3">Cuenta contable</th>
  </tr>
<% @formapagos.each do |formapago| %>
   <tr class="<%= cycle('rowStyle', 'rowStyle1') %>">
    <td><%=h formapago.fpag_codigo %></td>
    <td><%=h formapago.fpag_nombre %></td>
    <td><%=h formapago.plandecuenta.pcue_cuenta if formapago.plandecuenta %></td><td> - </td> <td><%=h formapago.plandecuenta.pcue_descripcion if formapago.plandecuenta %></td>
  
    <td><%= link_to 'Editar', edit_formapago_path(formapago) %></td>
    <td><%= link_to 'Borrar', formapago, :confirm => 'Esta seguro de borrar la forma de pago?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%=will_paginate @formapagos, :prev_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
</div>


