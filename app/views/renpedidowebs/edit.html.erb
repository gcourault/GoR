<% form_for(@renpedidoweb) do |f| %>
  <%= f.error_messages %>
<tr>
  <td>
    <%= f.label "Art&iacute;culo:"  %>
  </td>
  <td>
    <%= f.collection_select(:articulo_id,
    @articulos, :id, :arti_descripcion, :prompt=> "Seleccione un articulo:") %>
  </td>  
 </tr>
 <tr>
  <td>
    <%= f.label "Cantidad:" %>
