<h1>Editando pedido Nro. <%= "#{params[:idcabpedido]}" %></h1>
<br />
<% if @cabpedidoweb.pweb_estado.to_s == 'Abierto' %>
<table>
 <tr>
  <td class="boton" width="150px"  align="center">
   <img  src="/images/add.png" width="20px" height="20px" border="0"> 
   <span style="vertical-align: top">
    <%= link_to 'Agregar', :controller => 'renpedidowebs', :action => 'new', :idcabpedido => params[:idcabpedido], :page => params[:page] %>
   </span>
  </td>
   <td class="boton" width="150px"  align="center">
   <img  src="/images/volver.png" width="20px" height="20px" border="0"> 
   <span style="vertical-align: top">
   <%= link_to 'Volver', :controller => 'cabpedidowebs', :idcabpedidoweb => @cabpedidoweb.id, :page => params[:page] %>
   </span>
  </td>
 </tr>
</table>

<br />
<div class="tablaContainer" >
 <table class="tabladentrocont" border="0" cellpadding="0" cellspacing="0">
  <tr class="headerStyle">
    <th>Art&iacute;culo</th>
    <th>Cantidad</th>
  </tr>

<% @renpedidowebs.each do |renpedidoweb| %>
 <tr class="<%= cycle('rowStyle', 'rowStyle1') %>">
      <td><%=h renpedidoweb.articulo.arti_descripcion %></td>
      <td><%=h renpedidoweb.rweb_cantidad %></td>
    <!-- <td><%= link_to 'Show', renpedidoweb %></td> -->
    <td><%= link_to 'Editar', edit_renpedidoweb_path(renpedidoweb), :$page => params[:page] %></td>
    <td><%= link_to 'Eliminar', renpedidoweb, :confirm => 'Esta seguro de eliminar el art&iacute;culo del pedido?', :method => :delete, :$page => params[:page] %></td>
  </tr>
<% end %>
</table>
</div>
<% else %>
  <h1>EL pedido que intenta editar no se encuentra abierto ha sido <%= @cabpedidoweb.pweb_estado.to_s %> </h1>
<% end %>

